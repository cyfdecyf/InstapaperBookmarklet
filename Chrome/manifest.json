{
  "manifest_version": 2,

  "name": "InstapaperBookmark",
  "description": "Send web page to Instapaper using its bookmarklet",
  "version": "1.0",

  "icons": { "128": "icon-128.png" },

  "browser_action": {
  	"default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    }
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "permissions": [ "tabs", "http://*/", "https://*/" ]
}
